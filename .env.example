# Database Configuration
# Get these from your PostgreSQL provider (Vercel Postgres, Supabase, Neon, etc.)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DIRECT_URL=postgresql://user:password@host:port/database?sslmode=require

# Authentication Secrets
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
NEXTAUTH_SECRET=your-nextauth-secret-key-minimum-32-characters-long

# Application URLs
# Update these with your actual deployment URL
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AB AMS

# Development Mode
# Set to 'true' for local development with localDevStore
# Set to 'false' for production (uses database)
LOCAL_DEV_MODE=true

# Email Service (Optional - for notifications)
# Get API key from resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx

# File Storage (Optional - for media uploads)
# Get token from Vercel Dashboard → Storage → Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx

# Wellness Survey (Optional - defaults provided)
WELLNESS_EXPORT_URL=https://wellness-monitor-tan.vercel.app/api/surveys/cmg6klyig0004l704u1kd78zb/export/csv

